#!/usr/bin/env -S emacs -Q --script # -*- mode: emacs-lisp; lexical-binding: t; -*-
(require 'elpm
         (concat (file-name-directory
                  (file-truename load-file-name))
                 "../elpm.el"))

(defun read-recipes (argv)
  (mapcar
   #'(lambda (arg) (car (read-from-string arg)))
   argv))

(elpm-use-packages
 (read-recipes argv)
 default-directory
 t)
