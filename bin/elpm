#!/usr/bin/env -S emacs -Q --script # -*- mode: emacs-lisp; lexical-binding: t; -*-
(add-to-list 'load-path
             (replace-regexp-in-string "bin/[^/]+$" "" load-file-name))

(require 'elpm)
(let ((elpm-directory default-directory))
  (elpm-bootstrap)
  (when argv
    (elpm-use-packages
     (mapcar
      (lambda (arg)
        (car (read-from-string arg)))
      argv))))
